{
  "compilerOptions": {
    "checkJs": true,
    "customConditions": ["development"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["es2022"],
    "module": "node16",
    "outDir": "lib",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["coverage/", "node_modules/", "lib/"],
  "include": ["**/*.js", "index.d.ts"]
}
